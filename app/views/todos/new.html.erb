<h1>Create a new Todo</h1>
<%= form_for @todo do |f| %>
<% if @todo.errors.any? %>
<h2>The following errors prevented the todo from being saved</h2>
<ul>
    <% @todo.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <%end%>
    </ul>
    <%end%>
    <p>
<%= f.label :name %>
<%= f.text_field :name %>
</p>
    <p>
<%= f.label :description %>
<%= f.text_area :description %>
</p>
<p>
<%= f.submit %>
</p>
<%end%>